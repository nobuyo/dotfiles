[core]
    excludesfile = ~/.gitignore_global

[alias]
	a = add
	# aa = add -A
	aa = "!f(){ git add -A --dry-run | cut -d' ' -f 2 | xargs file | grep -v '\\-bit \\| x86' | cut -d':' -f 1 | xargs git add; }; f"
	amend = commit --amend
	amendm = commit --amend -m
	b = branch
	c = commit
	cm = commit -m
	cam = commit -am
	# auto commit
	acm = "!f(){ git commit -m "\"$(committer)\""; }; f"
	acam = "!f(){ git commit -am "\"$(committer)\""; }; f"
	ch = checkout
	chb = checkout -b
	chm = checkout master
	d = diff
	f = fetch
	l = log
	lo = log --oneline --decorate
	lp = log -p
	pob = "!f(){ git push origin $1; }; f"
	pom = push origin master
	update = pull origin master
	open = "!f(){ git-open $* }"
	o = open
	r = remote
	ru = remote update
	rv = remote -v
	s = status
	ss = status -s
	undo = reset HEAD~1 --mixed
	unstage = reset HEAD
	ver = !git --version
	# commit count
	cc = !git log --oneline --no-merges | grep -c ''
	alias = "!f(){ if test -z $1; then loop=; for k in `git config --get-regexp ^alias\\. | sort | sed -e 's/^alias\\.\\(\\S*\\).*/\\1/g'`; do echo -n $k; loop="${loop}1"; if test ${#loop} -lt 5; then echo -n '\t'; else echo; loop=; fi; done; echo; exit; fi; git config --list | grep ^alias\\.$1= | sed -e s/^alias\\.//; exit;};f"