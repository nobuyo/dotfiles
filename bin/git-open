#!/bin/bash

REMOTE=${1:-origin}

function variable_open() {
  case ${OSTYPE} in
    darwin* )
      open "$1"
      ;;
    linux* )
      xdg-open "$1"
      ;;
    cygwin* )
      cygstart "$1"
      ;;
  esac
}

function error {
  # color:red
  echo -e "\033[31mError\033[m" "$*"
}

function check_remote() {
  git remote -v | grep "$REMOTE" >/dev/null || {
    error "Remote \"$REMOTE\" not found, exitting."
    exit 1
  }
}

function encode_to_html() {
  local repo="$(echo $url | awk -F: '{ print $2 }')"
  encoded="https://github.com/$repo"
}

function extract_url() {
  url="$(git remote -v | grep "$REMOTE" | awk '{print $2}' | uniq )"
  case "$url" in
    git@* )
      encode_to_html
      url="$encoded"
      ;;
    https* )
      :
      ;;
  esac
}

extract_url
check_remote
variable_open "$url"
