#!/bin/bash

function usage() {
  echo "nobody"
}

function get_head() {
  if [[ ! -z "$hd" ]];then
    expr $hd + 1 > /dev/null
    if [[ "$?" -lt 1 ]]; then
      text_head="$(cat $1 | head -"$hd")"
    fi
  else
    text_head="$(cat $1 | head -n 10)"
  fi
}

function get_tail() {
  if [ ! -z "$tl" ]; then
    expr $tl + 1 > /dev/null
    if [[ "$?" -lt 1 ]]; then
      text_tail="$(cat $1 | tail -"$tl")"
    fi
  else
    text_tail="$(cat $1 | tail -n 10)"
  fi
}

function disp() {
  get_head "$1"
  get_tail "$1"

  echo "$text_head"
  echo
  echo "~~~~~~~~~~~~~~~~~~~~~~"
  echo
  echo "$text_tail"
}

while getopts "h:t:" opts
do
  case $opts in
    h )
      hd="$OPTARG"
      ;;
    t )
      tl="$OPTARG"
      ;;
    \?)
      exit 1
      ;;
  esac
done

shift $((OPTIND - 1))

# main
disp "$1"

